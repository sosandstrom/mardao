<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="mardaoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>net.sf.mardao.test.jpa.domain.JPAEmployee</class>
    <class>net.sf.mardao.test.jpa.domain.JPAOrganization</class>
    <class>net.sf.mardao.test.jpa.domain.JPAOrganizationUnit</class>
    <properties>
      <property name="hibernate.connection.username" value="mardao"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.password" value="mardao"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/mardao"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
